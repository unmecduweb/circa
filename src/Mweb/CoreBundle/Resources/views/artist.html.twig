{% extends "MwebCoreBundle::layout.html.twig" %}



{% block title %}{{ artist.title }}{% endblock %}


{% block content %}
    {#{{ liip(page, 'paralax', paralax) }}#}
    <section id="section-page-title" class="paralax-wrap"
             style="background-image: url('{{ liip(artist, 'parallax') }}')">
        <div class="section-container">
            <div class="container-fluid">
                <div class="block-title left">
                    <h2>
                        <span class="main"><span class="line"></span>{{ artist.title }}</span>
                        <span class="back">{{ parent.backTitle }}</span>
                    </h2>

                    <div class="breadcrumb">
                        $ /<a href="{{ path('_homepage') }}">Circa</a>&nbsp;&nbsp;/&nbsp;&nbsp;
                        <a href="{{ path('circa_page', {'slug': parent.slug}) }}">{{ parent.title }}</a>&nbsp;&nbsp;/&nbsp;&nbsp;

                        <a href="">{{ artist.title }}</a>
                    </div>
                </div>

            </div>
    </section>


    <section class="content">
        <div class="container-fluid">
            <div class="content-wrap">
                <div class="col-xs-12 col-sm-7 artist-content">

                    <h3>{{ artist.title|upper }} - {{ artist.subTitle }}</h3>
                    <h3 class="subtitle"><span class="glyphicon glyphicon-calendar"></span> {{ artist.scene|trans }} - {{ artist.sessionHours }}</h3>
                    <p>{{ artist.content|raw }}</p>
                    <p>
                        <a href="{{ artist.website }}">Voir le site web</a> <br/>
                        <a href="{{ artist.facebook }}">Voir la page facebook</a>
                    </p>
                    {{ artist.videoLink|raw }}

                    {#<img class="" src="{{ liip(artist, 'parallax') }}" alt="{{ artist.title }}"/>#}
                </div>
                {#NEWS#}
                <div class="col-xs-12 col-sm-4">
                    <div class="col-xs-12">
                        <h3 class="sidebar-title">Artistes du mÃªme genre</h3>
                    </div>
                    {% for art in artistList %}

                        {% if art.id != artist.id %}
                            <div class="col-xs-12 news">
                                <img src="{{ liip(art, 'news') }}" alt=""/>
                                <h3>{{ art.title }}</h3>
                                <h4>{{ art.subTitle }}</h4>
                                <h4>{{ art.sessionHours }}</h4>
                                <a href="{{ path('circa_artist', {'slugArtist': art.slug}) }}" class="button">En savoir
                                    plus</a>
                                <div class="clear"></div>
                            </div>
                        {% endif %}

                    {% endfor %}
                </div>
                <div class="clear"></div>
            </div>

        </div>
    </section>




{% endblock %}